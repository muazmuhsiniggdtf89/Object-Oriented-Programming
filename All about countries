# Class 1
class Bangladesh():
    def capital (self):
        print("Dhaka is the capital of Bangladesh.")
    def language (self):
        print("Bangla is the most widely spoken laguage of Bangladesh.")

    def type(self):
        print("Bangladesh is a developing country. ")

#Class 2
class USA():
    def capital (self):
        print("Washington , D.C. is the capital of USA.")
    def language (self):
        print("English is the most widely spoken laguage of Bangladesh.")

    def type(self):
        print("USA is a developing country. ")

# Object Creation 
obj_ban = Bangladesh()
obj_usa = USA()

for country in (obj_ban,obj_usa):
    country.capital()
    country.language()
    country.type()
